<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TestChartControl">
    <Brush x:Key="autobio-color">#007572</Brush>
    <Brush x:Key="global-selected-color">#00a29a</Brush>
    <!--#region 背景颜色-->
    <Brush x:Key="global-background">#e1e5ec</Brush>
    <Style x:Key="RectRadioButton" TargetType="RadioButton">
        <Setter Property="Width" Value="55" />
        <Setter Property="Height" Value="30" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <Grid>
                        <Border
                            x:Name="border"
                            BorderThickness="1"
                            CornerRadius="2">
                            <TextBlock
                                Margin="5,0,5,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="{TemplateBinding FontSize}"
                                Foreground="{TemplateBinding Foreground}"
                                Text="{TemplateBinding Content}" />
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource autobio-color}" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter TargetName="border" Property="Background" Value="Transparent" />
                            <Setter TargetName="border" Property="Background" Value="{StaticResource global-background}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type local:PcrChart}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" HorizontalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" MinHeight="300" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                            </Grid>
                            <local:ChartCanvas
                                x:Name="PART_Canvas"
                                Panel.ZIndex="999"
                                Visibility="{TemplateBinding Visibility}">
                                <local:ChartCanvas.ToolTip>
                                    <ToolTip
                                        x:Name="PART_Tooltip"
                                        HasDropShadow="False"
                                        HorizontalOffset="10"
                                        Placement="MousePoint"
                                        VerticalOffset="20" />
                                </local:ChartCanvas.ToolTip>
                            </local:ChartCanvas>
                            <Grid Grid.Row="1">
                                <Grid.Resources>
                                    <Style TargetType="Rectangle">
                                        <Setter Property="Height" Value="20" />
                                    </Style>
                                </Grid.Resources>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" MinWidth="80" />
                                    <ColumnDefinition Width="*" MinWidth="80" />
                                    <ColumnDefinition Width="*" MinWidth="80" />
                                    <ColumnDefinition Width="*" MinWidth="80" />
                                    <ColumnDefinition Width="8*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Label Content="通道设置：" />
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="FAM" />
                                    <Rectangle Grid.Column="1" Fill="Blue" />
                                </Grid>
                                <Grid Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="HEX" />
                                    <Rectangle Grid.Column="1" Fill="Green" />
                                </Grid>
                                <Grid Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="ROX" />
                                    <Rectangle Grid.Column="1" Fill="Gold" />
                                </Grid>
                                <Grid Grid.Column="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Cy5" />
                                    <Rectangle Grid.Column="1" Fill="DarkViolet" />
                                </Grid>
                            </Grid>
                            <StackPanel
                                x:Name="ButtonPanel"
                                Grid.Column="1"
                                Margin="5"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <RadioButton
                                    x:Name="allRadio"
                                    Grid.Row="1"
                                    Content="全部"
                                    IsChecked="True"
                                    Style="{StaticResource RectRadioButton}"
                                    Tag="" />
                                <RadioButton
                                    x:Name="famRaido"
                                    Content="FAM"
                                    Style="{StaticResource RectRadioButton}"
                                    Tag="FAM" />
                                <RadioButton
                                    x:Name="hexRadio"
                                    Content="HEX"
                                    Style="{StaticResource RectRadioButton}"
                                    Tag="HEX" />
                                <RadioButton
                                    x:Name="roxRadio"
                                    Content="ROX"
                                    Style="{StaticResource RectRadioButton}"
                                    Tag="ROX" />
                                <RadioButton
                                    x:Name="cy5Radio"
                                    Content="Cy5"
                                    Style="{StaticResource RectRadioButton}"
                                    Tag="Cy5" />
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="BottomFilterPcrChart" TargetType="{x:Type local:PcrChart}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <local:ChartCanvas
                            x:Name="PART_Canvas"
                            Panel.ZIndex="999"
                            Visibility="{TemplateBinding Visibility}">
                            <local:ChartCanvas.ToolTip>
                                <ToolTip
                                    x:Name="PART_Tooltip"
                                    HasDropShadow="false"
                                    HorizontalOffset="10"
                                    Placement="MousePoint"
                                    VerticalOffset="20" />
                            </local:ChartCanvas.ToolTip>
                        </local:ChartCanvas>
                        <Canvas x:Name="MainCanvas">
                            <Rectangle
                                x:Name="PART_Rect"
                                Fill="#30008BFF"
                                Stroke="RoyalBlue"
                                StrokeDashArray="4,2"
                                StrokeThickness="1"
                                Visibility="Collapsed" />
                        </Canvas>

                        <Grid Grid.Row="1">
                            <Grid.Resources>
                                <Style TargetType="Rectangle">
                                    <Setter Property="Width" Value="50" />
                                    <Setter Property="Height" Value="18" />
                                </Style>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" MinWidth="80" />
                                <ColumnDefinition Width="*" MinWidth="80" />
                                <ColumnDefinition Width="*" MinWidth="80" />
                                <ColumnDefinition Width="*" MinWidth="80" />
                                <ColumnDefinition Width="*" MinWidth="80" />
                                <ColumnDefinition Width="*" MinWidth="80" />
                                <ColumnDefinition Width="*" MinWidth="80" />
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Margin="10,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock
                                    MinHeight="18"
                                    HorizontalAlignment="Stretch"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="通道设置"
                                    TextAlignment="Center" />
                                <RadioButton
                                    x:Name="allRadio"
                                    Width="60"
                                    Margin="0,5"
                                    HorizontalAlignment="Center"
                                    Content="全部"
                                    GroupName="Channel"
                                    IsChecked="True"
                                    Style="{StaticResource RectRadioButton}"
                                    Tag="" />
                            </StackPanel>
                            <StackPanel
                                Grid.Column="1"
                                Margin="10,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <Rectangle Fill="Blue" />
                                <RadioButton
                                    x:Name="famRadio"
                                    Margin="0,5"
                                    Content="FAM"
                                    GroupName="Channel"
                                    Style="{StaticResource RectRadioButton}"
                                    Tag="FAM" />
                            </StackPanel>
                            <StackPanel
                                Grid.Column="2"
                                Margin="10,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <Rectangle Fill="Green" />
                                <RadioButton
                                    x:Name="hexRadio"
                                    Margin="0,5"
                                    Content="HEX"
                                    GroupName="Channel"
                                    Style="{StaticResource RectRadioButton}"
                                    Tag="HEX" />
                            </StackPanel>
                            <StackPanel
                                Grid.Column="3"
                                Margin="10,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <Rectangle Fill="Gold" />
                                <RadioButton
                                    x:Name="roxRadio"
                                    Margin="0,5"
                                    Content="ROX"
                                    GroupName="Channel"
                                    Style="{StaticResource RectRadioButton}"
                                    Tag="ROX" />
                            </StackPanel>
                            <StackPanel
                                Grid.Column="4"
                                Margin="10,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <Rectangle Grid.Column="4" Fill="DarkViolet" />
                                <RadioButton
                                    x:Name="cy5Radio"
                                    Margin="0,5"
                                    Content="Cy5"
                                    GroupName="Channel"
                                    Style="{StaticResource RectRadioButton}"
                                    Tag="Cy5" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                    <!--<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">

                 </ScrollViewer>-->
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
